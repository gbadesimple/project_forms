<form accept-charset="UTF-8" action="/users" method="POST">
  <label for="username"> Username: </label>
    <input type="text" name="user[username]" size="40" placeholder="not more than 15 characters"><br />

  <label for="email"> E-mail: </label>
    <input type="text" name="user[email]" size="40" placeholder="not more than 200 characters"><br />

  <label for="password"> Password: </label>
    <input type="password" name="user[password]" size="40" placeholder="not more than 10 characters" >

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" > <br />
    <input type="submit" name="submit" value="Submit">

</form>
