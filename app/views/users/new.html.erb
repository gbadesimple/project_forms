<h1 class="new_form_header"> New User Account </h1>

<%= form_for @user do |f| %>

  <%= render partial: "form_errors" %>

  <div class="new_form">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Your name here' %><br />

    <%= f.label :email %>
    <%= f.text_field :email, placeholder: 'email@example.co.uk' %><br />

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Your password here' %><br />

    <%= f.submit 'Submit' %>
  </div>
<% end %>
<p>
  <%= link_to "<<Back to registered users", users_path %>
</p>


