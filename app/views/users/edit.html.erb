<h1> Edit page </h1>
<%= form_for edit_user_path(@user) do |f| %>

  <%= render partial: "form_errors" %>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username, value: "#{@user.username}" %><br />

    <%= f.label :email %>
    <%= f.text_field :email, value: "#{@user.email}", size: "30" %><br />

    <%= f.label :password %>
    <%= f.password_field :password, size: "30" %><br />
  </div>
  <p>
    <%= f.submit 'Update' %> |
    <%= link_to "Back", users_path %>
  </p>
<% end %>



